# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

#order += "ipv6"
order += "cpu_usage"
order += "load"
#order += "cpu_temperature 0"
order += "disk /"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery 0"
order += "tztime local"
#order += "volume master"
cpu_temperature 0 {
		format = "%degrees°C"
		path = /sys/class/hwmon/hwmon3/temp1_input } 

cpu_usage {
		format = "🖥️%cpu0"
		max_threshold = 75
}

volume master {
        format = "VOL %volume"
        format_muted = "VOL muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "📶%quality"
        format_down = "W:"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E:UP"
        format_down = "E:DW"
}
battery 0 {
    format = "%status %percentage %remaining %emptytime"
    format_percentage = "%.02f%%"  
    status_chr = "⚡ CHR"
    status_bat = "🔋 BAT"
    status_unk = "? UNK"
    status_full = "☻ FULL"
    path = "/sys/class/power_supply/BAT0/uevent"  
    last_full_capacity = true  
    low_threshold = 80 
    threshold_type = "percentage" 
}

tztime local {
        format = "📅%d/\%m %H:%M:%S"
}

load {
        format = "🔥%1min|%5min"
#        max_threshold = "0.9"
#       format_above_threshold = "W: %1min %5min"
}

disk "/" {
        format = "💾%avail" 
}
