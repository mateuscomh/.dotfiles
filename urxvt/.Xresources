! ========================
! Cores e Aparência
! ========================
URxvt*foreground:   #d6d6d6
URxvt*background:   #151c20

! Cores de 16 Cores Básicas
URxvt*color0:       #000000
URxvt*color1:       #FF3232
URxvt*color2:       #009600
URxvt*color3:       #BEBE00
URxvt*color4:       #6464FF
URxvt*color5:       #AF6400
URxvt*color6:       #00B4B4
URxvt*color7:       #969696

! Cores Brilhantes/Bold
URxvt*color8:       #5A5A5A
URxvt*color9:       #FF4B4B
URxvt*color10:      #00B400
URxvt*color11:      #FF7F00
URxvt*color12:      #7D7DFF
URxvt*color13:      #EB4BEB
URxvt*color14:      #5AFFFF
URxvt*color15:      #D2B48C

! Fonte
URxvt*font: xft:Hack:size=14:antialias=true:hinting=true
URxvt.boldFont: xft:Hack:bold:size=14:antialias=true:hinting=true

! Cursor
URxvt*cursorColor: #FFFFFF
URxvt*cursorBlink: true
URxvt*cursorUnderline: false
URxvt*pointerColor: #FFFFFF
URxvt*pointerColorBackground: #151c20
! ========================
! Comportamento do Terminal
! ========================
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

!!URxvt.letterSpace: -3
!!URxvt.iso14755: False

! ========================
! Navegação e Teclas de Atalho
! ========================
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

! Bindings para Copiar e Colar
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-u: perl:url-select:select_next

! Bindings para Ctrl-Shift
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

! ========================
! Extensões e Comandos
! ========================
URxvt.perl-ext-common: tabbed,confirm-paste,default,selection-to-clipboard,option-popup,block-graphics-to-ascii
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.urlLauncher: brave
URxvt.underlineURLs: true
URxvt.urlButton: 1

urxvt*perl-lib: /usr/lib/urxvt/perl/
urxvt*urlLauncher: /usr/bin/firefox
urxvt*matcher.button: 2
urxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

! ========================
! Abas (Tabbed)
! ========================
URxvt.tabbed.new-button: true
URxvt.tabbed.autohide: true
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    7
URxvt.tabbed.tab-bg:    0

! ========================
! Outras Configurações
! ========================
URxvt.depth: 32

! Desabilitar ISO 14755 unicode input
URxvt.iso14755_52: false

! Desabilitar Ctrl-Alt-c & Ctrl-Alt-v bindings (opcional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

